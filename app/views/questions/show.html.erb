<h3><%= @question.name %></h3>
<p><%= @question.content %></p>


<% y = @question.answers.first.id %>

<%= form_tag do %>
<% x = y %>
<% while x < (@question.answers.count + y) %>
<%= radio_button_tag(:president, @question.answers.find(x).correct) %>
<%= label_tag(:president, @question.answers.find(x).content) %>
<% x += 1 %>
<% end %>
<%= submit_tag("answer_question") %>
<% end %>
